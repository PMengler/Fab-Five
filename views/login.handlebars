<div class="row justify-space-between-md">
  <div class="login-card">

    <h2 class="page-title">Login  {{{get_emoji}}}</h2>
     
    <form class="form" id="login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input form control" type="text" id="username-login" autofocus="true"/>
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" autofocus="true"/>
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Login</button>
        <button class="btn btn-primary"><a href="/signup">Signup</a></button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>